doctype html
html(lang="fr")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Recherche de médicaments
    link(rel="stylesheet", href="/css/style.css")
  body
    .search-container
      h1 Demander à Kevin
      form(action="/search", method="GET")
        input.search-box(
          type="text",
          name="q",
          placeholder="Entrez le nom d'un médicament...",
          autocomplete="off",
          value=query || ''
        )
        button.search-button(type="submit") Rechercher
      
      if error
        .error-message= error
      
      if results && results.length > 0
        .results
          h2 Résultats de la recherche
          each result in results
            .result-item
              h3= result.denomination_medicament
              if result.libelle_presentation
                p= result.libelle_presentation
      else if query
        .no-results
          p Aucun résultat trouvé pour "#{query}" 